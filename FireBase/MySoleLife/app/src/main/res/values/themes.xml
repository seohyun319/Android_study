<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MySoleLife" parent="Theme.AppCompat.Light"> <!-- activity intro의 버튼에 입힌 색이 안 먹어서 테마 바꿔줌 -->
        <!-- Primary brand color. -->
        <item name="windowNoTitle">true</item> <!-- 앱 상단에 뜨는 앱타이틀 부분 없애기 -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/mainColor</item> <!-- 상태바에 적용되는 부분 -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- 스타일 일괄 적용 위해서 여기에 따로 지정해둠. style="@style/AuthEditText"로 불러옴.-->
    <style name="AuthEditText" parent="android:Widget.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>
</resources>